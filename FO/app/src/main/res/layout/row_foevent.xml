<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Row_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:minWidth="150dp"
            android:singleLine="true"
            android:text="Title"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_Row_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_Row_ProfilePic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_row_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ll_Row_Image"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_Row_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:layout_alignParentLeft="true"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_Row_Type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:minWidth="80dp"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:paddingRight="5dp"
                        android:text="Public"
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"/>

                </RelativeLayout>




                <TextView
                    android:id="@+id/tv_Row_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Time"
                    android:textColor="#ff7f7f7f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_Row_Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Location"
                    android:textColor="#ff7f7f7f"
                    android:textSize="15sp" />


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>